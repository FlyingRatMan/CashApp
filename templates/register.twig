<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>

    <form method="POST">
        <label for="name"> Name:
            <input required
                   type="text"
                   name="name"
                   value="{{ errors ? userName : '' }}">
        </label>
        <label for="email"> E-Mail:
            <input required
                   type="email"
                   name="email"
                   value="{{ errors ? userEmail : '' }}">
        </label>
        <label for="password"> Password:
            <input required
                   type="password"
                   name="password">
        </label>
        <p>
            {{ errors.emailErr ~ errors.passErr }}
        </p>

        <input type="submit" name="user" value="Sign up!">
    </form>

</body>
</html>